<mvc:View 
xmlns="sap.m" 
xmlns:mvc="sap.ui.core.mvc" controllerName="project1.controller.View2">
    <Page>
        <ObjectHeader
            title="{global>invoiceNumber}"
            intro="{global>vendorCode}"
            number="{global>vendorCode}"
            numberUnit="Company Code {global>companyCode}">
        </ObjectHeader>
        <Table
            id="itemsTable"
            inset="false"
            headerText="Invoice Items"
            items="{global>invoiceItems}">
            <columns>
                <Column>
                    <Text text="Item No" />
                </Column>
                <Column>
                    <Text text="GL Account" />
                </Column>
                <Column>
                    <Text text="Amount" />
                </Column>
                <Column>
                    <Text text="Cost Center" />
                </Column>
            </columns>

            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{global>itemNo}" />
                        <Input value="{global>glAccount}" />
                        <Input value="{global>amount}" />
                        <Input value="{global>costCenter}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button
                    id="postBtn"
                    text="Post"
                    type="Emphasized"
                    press="onPost"
                    enabled="{viewModel>/postEnabled}" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
